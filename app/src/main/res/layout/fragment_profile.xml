<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swagger.navneeeth99.cepchatter.ProfileFragment">

    <ImageButton
        android:contentDescription="@string/string_content_description"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/changeProfPicButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/namestr"
        android:id="@+id/profileUsernameTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/changeProfPicButton"
        android:layout_toEndOf="@+id/changeProfPicButton"
        android:layout_alignBottom="@+id/changeProfPicButton"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="25sp"
        android:text="@string/status_str"
        android:id="@+id/profileStatusTV"
        android:gravity="center"
        android:layout_below="@+id/changeProfPicButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/profile_progress"
        android:clickable="true"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff">

        <ProgressBar
            android:indeterminate="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>
