<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/generic_dummy_str"
        android:id="@+id/msgTitleTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_bright"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/generic_dummy_str"
        android:id="@+id/msgContentBriefTV"
        android:layout_below="@+id/msgTitleTV"
        android:layout_alignLeft="@+id/isImage"
        android:layout_alignStart="@+id/isImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#27586B"/>

    <ImageView
        android:contentDescription="@string/generic_dummy_str"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/isImage"
        android:src="@drawable/imgimage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"/>

</RelativeLayout>